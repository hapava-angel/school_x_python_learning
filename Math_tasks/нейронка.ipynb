   "source": [
    "\n",
    "# Определение сигмоидной функции активации\n",
    "def sigmoid(z):\n",
    "    return 1 / (1 + np.exp(-z))\n",
    "\n",
    "# Инициализация данных и меток\n",
    "X = np.array([[-1, -1], [-1, 1], [1, -1], [1, 1]])\n",
    "Y = np.array([[0], [1], [1], [0]])\n",
    "\n",
    "# Инициализация параметров\n",
    "input_size = 2\n",
    "hidden_size = 5  #кол-во нейронов в скрытом слое, его можно менять, тогда увеличиться точность, то есть уменьшиться кол-во потерь, поэтому и нужен хотя бы один скрытый слой с некоротым кол-вом нейронов\n". Но основная причина, почему ннужен скрытый слой - это то, что задача XOR линейно не разделима. ТО есть нужно провести как минимум две прямых, что раздлеить значения 0 и 1
    "output_size = 1\n",
    "\n",
    "# иногда на схемах не обозначают нейроны смещения, а просто учитывают их веса при вычислении входного значения например:\n",
    "# input = H1*w1+H2*w2+b3\n",
    "# b3 = bias*w3\n",
    "# Так как его выход всегда равен 1, то можно просто представить что у нас есть дополнительный синапс с весом и прибавить к сумме этот вес без упоминания самого нейрона\n",
    "\n",
    "# Веса и смещения для скрытого слоя\n",
    "W1 = np.random.randn(hidden_size, input_size)             \n",
    "b1 = np.zeros((hidden_size, 1))     #bias - нейрон смещения (вес).\n",
    "\n",
    "# Веса и смещение для выходного слоя\n",
    "W2 = np.random.randn(output_size, hidden_size)\n",
    "b2 = np.zeros((output_size, 1))\n",
    "\n",
    "learning_rate = 0.1\n",
    "epochs = 10000\n",
    "\n",
    "# Обучение модели\n",
    "for epoch in range(epochs):\n",
    "    # Прямое распространение\n",
    "    Z1 = np.dot( W1, X.T) + b1 #hidden input\n",
    "    A1 = sigmoid(Z1)           #hidden input active\n",
    "    Z2 = np.dot(W2, A1) + b2   #output fron input\n",
    "    A2 = sigmoid(Z2)           #output\n",
    "\n",
    "    # Расчет функции потерь (через бинарную кросс-энтропию)\n",
    "    cost = -np.mean(Y.T * np.log(A2) + (1 - Y.T) * np.log(1 - A2))\n",
    "\n",
    "    # Обратное распространение\n",
    "    dZ2 = A2 - Y.T                                  #error - дельта предсказанного и желаемого результатов\n",
    "    dW2 = np.dot(dZ2, A1.T) / 4                     # деление на 4, потому что вычисляется средний градиент для кажого из четырех зачения X в input\n",
    "    db2 = np.sum(dZ2, axis=1, keepdims=True) / 4    # axis = 1 - суммирование выполняется по оси 1 массива dZ2, имеющем форму (1, 4), где каждый столбец соответствует другому обучающему примеру, а вычисляется сумма производных для каждого обучающего примера отдельно. \n",
    "    dZ1 = np.dot(W2.T, dZ2) * A1 * (1 - A1)         #keeppdims = True - измерение сохраняется в размере 1, чтобы обновить параметр смещния\n",
    "    dW1 = np.dot(dZ1, X) / 4\n",
    "    db1 = np.sum(dZ1, axis=1, keepdims=True) / 4\n",
    "\n",
    "    # Обновление параметров\n",
    "    W1 -= learning_rate * dW1\n",
    "    b1 -= learning_rate * db1\n",
    "    W2 -= learning_rate * dW2\n",
    "    b2 -= learning_rate * db2\n",
    "\n",
    "    if (epoch + 1) % 1000 == 0:\n",
    "        print(f'Эпоха [{epoch + 1}/{epochs}], Потери: {cost}') \n",
    "\n",
    "# Тестирование модели\n",
    "Z1 = np.dot(W1, X.T) + b1\n",
    "A1 = sigmoid(Z1)\n",
    "Z2 = np.dot(W2, A1) + b2\n",
    "A2 = sigmoid(Z2)\n",
    "predictions = (A2 > 0.5).astype(int)    #перевод в булевые значения, где True превращается в integer 1, а False в 0\n",
    "print(\"Предсказания:\", predictions)"
   ]
  }
 ],
